<!DOCTYPE html>
<html>
  <head>
    <title>Chores</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <div class="container-fluid p-0">
      <%= turbo_frame_tag "toasts", class: "toasts-container" do %>
      <% end %>

      <div class="d-flex">
        <%= render 'layouts/sidebar' %>
        <div class="main-content w-100">
          <div class="pt-3">
            <%= yield %>
          </div>
        </div>

        <button class="navbar-toggler position-absolute end-0 top-0 mt-3 me-3 d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
          <span>
            <i class="fas fa-bars"></i>
          </span>
        </button>
      </div>
    </div>
  </body>
</html>
